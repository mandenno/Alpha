<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".ErrorSite">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:id="@+id/lowerx"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        card_view:cardCornerRadius="5dp"

        android:layout_centerVertical="true"
        android:clipChildren="false"
        card_view:cardElevation="20dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:id="@+id/icox"
        android:src="@mipmap/error"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icox"
        android:id="@+id/invalid"
        android:layout_marginTop="30dp"
        android:text="Invalid Business Permit"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp" />

            <TextView
                android:id="@+id/fail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invalid"
                android:layout_marginTop="20dp"
                android:text="Kindly proceed to Pay Fine or Lodge a Case!"
                android:textAlignment="center"
                android:textSize="18sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/fail_info"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/payx"
            android:layout_width="120dp"

            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@mipmap/shapeit"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="PAY FINE"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/lodge_case"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/btn_disabled"
            android:layout_toRightOf="@+id/payx"
            android:background="@mipmap/shapeit"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="LODGE CASE"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>